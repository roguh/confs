##################################
# Media keys #
##################################

# Pulse Audio controls
"pactl set-sink-volume 0 +5%"
    XF86AudioRaiseVolume
"pactl set-sink-volume 0 -5%"
    XF86AudioLowerVolume
"pactl set-sink-mute 0 toggle ; pactl set-sink-mute 1 toggle"
    XF86AudioMute
"pactl set-source-volume 1 +5%"
    Control + XF86AudioRaiseVolume
"pactl set-source-volume 1 -5%"
    Control + XF86AudioLowerVolume
"pactl set-source-mute 1 toggle ; pactl set-source-mute 2 toggle"
    XF86AudioMicMute

# Sreen brightness controls
"xbacklight -inc 20"
    XF86MonBrightnessUp
"xbacklight -dec 20"
    XF86MonBrightnessDown

"hue_lights_toggle_all.sh"
    XF86Tools

"switch-displays-xrandr.sh"
    XF86Display
# XF86Bluetooth
"launcher.sh"
    XF86Favorites
"launcher.sh"
    XF86Search
"launcher.sh window"
    Mod4 + XF86Search
"launcher.sh window"
    Control + XF86Search
"sleep.sh"
    XF86Sleep sleep

# Media player controls
# "playerctl"
    XF86AudioPlayPause
"playerctl play-pause"
    XF86AudioPlay
"playerctl pause"
    XF86AudioPause
"playerctl next"
    XF86AudioNext
"playerctl previous"
    XF86AudioPrev

# Super/Windows key
"launcher.sh"
    Mod4 + d
"launcher.sh window"
    Mod4 + Tab

"calculator.sh"
    XF86Calculator
